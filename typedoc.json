    "theme": "pages-plugin",
    "tsconfig": "tsconfig.build.json",
    "listInvalidSymbolLinks": true,
    "plugin": ["typedoc-plugin-pages", "./docs-source/plugin"],
    "codeBlocksDirectories": {
        "test": "./test/demo"
